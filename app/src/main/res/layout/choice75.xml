<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/subject75_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/subject75_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subject75_number"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <RadioGroup
        android:id="@+id/subject75_answer_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subject75_content">

        <RadioButton
            android:id="@+id/sub75_ans_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:button="@drawable/check_circle_default"
            android:text="A" />

        <RadioButton
            android:id="@+id/sub75_ans_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:button="@drawable/check_circle_default"
            android:text="B" />

        <RadioButton
            android:id="@+id/sub75_ans_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:button="@drawable/check_circle_default"
            android:text="C" />

        <RadioButton
            android:id="@+id/sub75_ans_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:button="@drawable/check_circle_default"
            android:text="D" />

        <RadioButton
            android:id="@+id/sub75_ans_e"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:button="@drawable/check_circle_default"
            android:text="E" />
    </RadioGroup>
</RelativeLayout>